#include <stdio.h>
#include <stdlib.h>
#define maxlin 3
#define maxcol 4

typedef struct{
    int idProduto;
    char descProduto[50];
    int quantidade;
    float valorUnit;
} Produto;

void toString(Produto a){
    printf("ID do Produto.................: %d\n", a.idProduto);
    printf("Produto.......................: %s\n", a.descProduto);
    printf("Valor da unidade..............: %.2f\n", a.valorUnit);
    printf("Quantidade....................: %d\n", a.quantidade);
    printf("\n\n");
}

int main()
{
    int i=0;
    float total;
    Produto vetor[20];

    printf("Insira o ID: ");
    scanf(" %d", &vetor[i].idProduto);

    while(vetor[i].idProduto != 0){

        fflush(stdin);
        printf("Produto: ");
        gets(vetor[i].descProduto);

        printf("Valor da unidade: ");
        scanf(" %f", &vetor[i].valorUnit);

        fflush(stdin);
        printf("Quantidade: ");
        scanf(" %d", &vetor[i].quantidade);
        printf("\n+---------------------------------------+\n\n");

        total+=(vetor[i].valorUnit*vetor[i].quantidade);
        i++;

        printf("Insira o ID: ");
        scanf("%d", &vetor[i].idProduto);
    }

    printf("\n+---------------------------------------+\n\n");
    printf("PRODUTOS CADASTRADOS\N")

    for(int a=0; a<i; a++){
        toString(vetor[a]);
    }
    printf("+---------------------------------------+\n");
        printf("TOTAL: %.2f\n\n\n", total);
}
